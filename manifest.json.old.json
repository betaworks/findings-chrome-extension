{
  "name": "Findings",
  "version": "0.1",
  "manifest version": 2,
  "description": "The Findings Chrome extension",
  "background": {
  	"page": "background.html"
  },
  "browser_action": {
  	"default_icon": "icon.png",
  	"default_title": "Findings.com",
  	"default_popup": "popup.html"
  },
  "permissions": [
  	"tabs",
  	"http://*/*",
  	"https://*/*"
  ]

}
