{
    "name": "Findings",
    "version": "0.55",
    "manifest_version": 2,
    "icons": {
        "128": "icon-128x128.png",
        "48": "icon-48x48.png",
        "16": "icon-16x16.png"
    },
    "content_scripts": [
        {
        "matches": ["http://*/*", "https://*/*"],
        "exclude_matches": ["*://*.findings.com/*", "*://findings.com/*"],
        "css": ["highlighter.css"],
        "js": ["config.js", "jquery-1.8.2.min.js",  "highlighter.js"]
        }
    ],
    "description": "Discover the highlights",
    "background": {
        "page": "fdgs_background.html"
    },
    "browser_action": {
        "default_icon": "icon-48x48.png",
        "default_title": "Findings.com"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        "icon-16x16.png",
        "icon-48x48.png",
        "icon-128x128.png",
        "images/*"
    ],
    "permissions": [
        "tabs",
        "contextMenus",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}
